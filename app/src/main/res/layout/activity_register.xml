<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#354B6E">
    <!--
        tools:context=".LoginActivity"
    -->
    <com.text.view.ClearEditText
        android:id="@+id/et_user_name"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:drawableLeft="@drawable/ic_icon_username"
        android:drawablePadding="10dp"
        android:hint="请输入账号"
        android:inputType="textVisiblePassword"
        android:maxWidth="150dp"
        android:minWidth="150dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#FFFFFF"
        android:textColorHint="#6DFFFFFF"
        android:textSize="18sp"
        android:theme="@style/MyEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.text.view.ClearEditText
        android:id="@+id/et_user_phone"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:drawableLeft="@drawable/ic_icon_phone"
        android:drawablePadding="10dp"
        android:hint="请输入电话"
        android:inputType="textVisiblePassword"
        android:maxWidth="150dp"
        android:minWidth="150dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#FFFFFF"
        android:textColorHint="#6DFFFFFF"
        android:textSize="18sp"
        android:theme="@style/MyEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.text.view.ClearEditText
        android:id="@+id/et_user_passward"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:drawableLeft="@drawable/ic_icon_password"

        android:drawablePadding="10dp"
        android:hint="请输入密码"
        android:inputType="textWebPassword"
        android:maxWidth="150dp"
        android:minWidth="150dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#6DFFFFFF"
        android:theme="@style/MyEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_user_phone" />

    <com.text.view.ClearEditText
        android:id="@+id/et_user_passwardagain"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"

        android:drawableLeft="@drawable/ic_icon_password"
        android:drawablePadding="10dp"
        android:hint="请再次输入密码"
        android:inputType="textWebPassword"
        android:maxWidth="150dp"
        android:minWidth="150dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#6DFFFFFF"
        android:theme="@style/MyEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_user_passward" />

    <Button
        android:id="@+id/but_registered"
        android:layout_width="137dp"
        android:layout_height="63dp"
        android:text="注册"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_user_passwardagain" />

</androidx.constraintlayout.widget.ConstraintLayout>